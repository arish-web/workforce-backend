datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  role       Role
  isActive   Boolean  @default(true)
  locationId String?  
  location   Location? @relation(fields: [locationId], references: [id])
  createdAt  DateTime @default(now())
}

model Location {
  id        String   @id @default(uuid())
  name      String
  users     User[]
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}
