datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  role     Role
  isActive Boolean @default(true)

  locationId String?
  location   Location? @relation("EmployeeLocation", fields: [locationId], references: [id])

  managedLocations Location[] @relation("LocationManager")

  assignedTasks Task[] @relation("AssignedTasks")

  managedTasks Task[] @relation("ManagerTasks")

  createdAt DateTime @default(now())
}

model Location {
  id             String  @id @default(uuid())
  name           String
  organizationId String
  managerId      String?

  organization Organization @relation(fields: [organizationId], references: [id])

  // manager relation
  manager User? @relation("LocationManager", fields: [managerId], references: [id])

  // employees
  users User[] @relation("EmployeeLocation")

  // tasks under this location
  tasks Task[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  isActive  Boolean   @default(true)
  deletedAt DateTime?

  locations Location[]

  createdAt DateTime @default(now())
}

model Task {
  id     String     @id @default(uuid())
  title  String
  status TaskStatus @default(PENDING)

  dueDate  DateTime
  priority String

  managerId String
  manager   User   @relation("ManagerTasks", fields: [managerId], references: [id])

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id])

  assignedToId String
  assignedTo   User   @relation("AssignedTasks", fields: [assignedToId], references: [id])

  comments  Comment[]
  createdAt DateTime  @default(now())
}

model Comment {
  id      String @id @default(uuid())
  comment String

  taskId String
  task   Task   @relation(fields: [taskId], references: [id])

  createdAt DateTime @default(now())
}
